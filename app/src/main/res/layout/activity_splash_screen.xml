<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_splash"
    tools:context=".splashscreen.SplashScreenActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_splash2"/>

    <ImageView
        android:layout_width="142dp"
        android:layout_height="154dp"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:contentDescription="@string/cat_logo"
        android:src="@drawable/kitten_logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/animal_world"
        android:textColor="@color/white_200"
        android:textSize="32sp"
        android:layout_gravity="center"
        android:textAlignment="center"
         android:fontFamily="monospace"/>

</FrameLayout>